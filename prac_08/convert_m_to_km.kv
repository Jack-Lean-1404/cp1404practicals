BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
           # text: '7'
            font_size: 48
           # multiline: False
            on_text_validate: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.30
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.increment_miles(1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.increment_miles(-1)
    Button:
        text: 'Convert miles to km'
        font_size: 48
        #on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 0.75, 0.8, 1)

