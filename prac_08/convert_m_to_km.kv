BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48
            on_text_validate: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.30
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.increment_miles(1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.increment_miles(-1)
    Button:
        text: 'Convert miles to km'
        font_size: 48
        on_press: app.convert_miles()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)

